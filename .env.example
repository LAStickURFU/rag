# Основные настройки приложения
APP_NAME=RAG Demo
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=true

# Настройки логирования
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE=logs/app.log

# Директории
DATA_DIR=data
INDEX_DIR=indexes
EVAL_DIR=evaluation

# Настройки RAG
EMBEDDING_MODEL=intfloat/multilingual-e5-large
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-12-v2
CHUNK_SIZE=400
CHUNK_OVERLAP=100
USE_HYBRID_SEARCH=true
USE_RERANKER=true
DENSE_WEIGHT=0.6
RERANKER_WEIGHT=0.6
USE_ADAPTIVE_K=true
LANGUAGE=russian
SPACY_MODEL=ru_core_news_md

# Настройки LLM
LLM_MODEL=mistral:7b-instruct
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=512

# Настройки адаптивного количества фрагментов
MIN_K=2
MAX_K=5
MIN_SCORE_THRESHOLD=0.45

# Настройки для Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Настройки для Ollama
OLLAMA_HOST=http://localhost:11434

# Пути к модели и токенизатору (для локальных моделей)
MODEL_PATH=
TOKENIZER_PATH=

# Настройки API-ключей (для внешних API)
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=

# Настройки безопасности
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
TOKEN_EXPIRE_MINUTES=60 